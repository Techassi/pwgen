{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "lib/types",
        "removeComments": true,
        "resolveJsonModule": false,
        "newLine": "lf",
        "types": [
            "youtube"
        ],
        "paths": {
            "@pw/*": [
                "packages/pwgen/src"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "packages/**/src"
    ],
    "exclude": [
        "node_modules"
    ]
}